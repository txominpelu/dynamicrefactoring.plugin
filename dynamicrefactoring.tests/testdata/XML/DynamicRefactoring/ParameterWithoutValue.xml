<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE refactoring SYSTEM "refactoringDTD.dtd">

<refactoring name="ParameterWithoutValue">
	<information>
		<description>Cambia el nombre a un parámetro de un método.</description>
		<image src="imagen.gif" />
		<motivation>El nombre del parámetro de un método no revela su intención.</motivation>
	</information>
	<inputs>
		<input type="proyecto.mooncore.classs.ClassDef" name="Clase" method="getAllClassDefs" />
		<input type="proyecto.mooncore.classs.MethDec" name="Método" from="Clase" method="getProperties" />
		<input type="proyecto.mooncore.classs.FormalArgument" name="Parámetro" from="Método" method="getFormalArg" />
		<input type="proyecto.construct.Modelo" />
	</inputs>
	<mechanism>
		<preconditions>
			<precondition name="ExistsParameterInMethod" />
		</preconditions>
		<actions>
			<action name="SubstituteNameParameter" />
		</actions>
		<postconditions>
			<postcondition name="ExistsParameterInMethod" />
		</postconditions>
	</mechanism>
	<examples>
		<example before="ejemplo1_antes.txt" after="ejemplo1_despues.txt" />
		<example before="ejemplo2_antes.txt" after="ejemplo2_despues.txt" />
	</examples>
</refactoring>


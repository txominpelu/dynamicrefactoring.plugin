<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE refactoring
  SYSTEM 'refactoringDTD.dtd'>
<refactoring name="Remove Parameter">
	
	
	
	
	<information>
		
		
		
		
		<description>
			
			Remove a given parameter from a method's signature.
		
		</description>
		
		
		
		
		<image src="removeparameter.JPG"/>
		
		
		
		
		<motivation>
			
			A parameter is no longer used by the method body.
		
		</motivation>
		
		
	
		
		<categories>
			
			
			<category>
				
				Fowler.MakingMethodCallsSimpler
			
			</category>
			
		
		</categories>
		
	</information>
	
	<inputs>
		
		
		
		
		<input name="Model" root="false" type="moon.core.Model"/>
		
		
		
		
		<input from="Argument" method="getMethDec" name="Method" root="false" type="moon.core.classdef.MethDec"/>
		
		
		
		
		<input name="Argument" root="true" type="moon.core.classdef.FormalArgument"/>
		
		
	
	
	</inputs>
	
	
	
	
	<mechanism>
		
		
		
		
		<preconditions>
			
			
			
			
			<precondition name="repository.moon.concretepredicate.SignatureEntityIsNotUsedInMeth">
				
				
				
				
				<param name="Argument"/>
				
				
				
				
				<param name="Method"/>
				
				
			
			
			</precondition>
			
			
		
		
		</preconditions>
		
		
		
		
		<actions>
			
			
			
			
			<action name="repository.moon.concreteaction.RemoveFormalA">
				
				
				
				
				<param name="Argument"/>
				
				
				
				
				<param name="Method"/>
				
				
			
			
			</action>
			
			
		
		
		</actions>
		
		
		
		
		<postconditions>
			
			
			
			
			<postcondition name="repository.moon.concretepredicate.HasNotFormalA">
				
				
				
				
				<param name="Method"/>
				
				
				
				
				<param name="Argument"/>
				
				
			
			
			</postcondition>
			
			
		
		
		</postconditions>
		
		
	
	
	</mechanism>
	
	
	
	
	<examples/>
	
	


</refactoring>
